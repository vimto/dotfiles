# Easier navigation
alias ..="cd .."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Files, directories
alias lsl="ls -lhGF"
alias rr="rm -rf"
alias cpwd='pwd|tr -d "\n"|pbcopy'

# Git
alias g="git"
alias gst="git status -sb"
alias gl="git log --oneline --decorate"
alias gco="git checkout"
alias gb="git branch"

# Network
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ipconfig getifaddr en0"
alias fdns="dscacheutil -flushcache"

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# Project shortcuts
alias dotfiles="cd ~/code/personal/dotfiles"
alias no="cd ~/code/personal/noodles"
alias as="cd ~/code/action-station/action-station"
alias ah="cd ~/code/action-station/action-hub"
alias pp="cd ~/code/pp/press-patron-rails"
alias idi="cd ~/code/open/identity"
alias jo="cd ~/code/open/journey && chruby 2.6.2"
alias ra="cd ~/code/open/rally"

# ruby
alias be="bundle exec"
alias r="./bin/rails"
alias ra="./bin/rake"
